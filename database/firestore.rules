rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================
    // Helper Functions
    // ========================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }

    function isTenantOwner(tenantId) {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/tenants/$(tenantId)).data.ownerUid == request.auth.uid;
    }

    // ========================================
    // Users Collection
    // ========================================
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow read: if isAdmin();
    }

    // ========================================
    // Collection Group: Employees
    // ========================================
    match /{path=**}/employees/{employeeId} {
      allow read: if true;
    }

    // ========================================
    // Customers Collection (Legacy)
    // ========================================
    match /customers/{customerId} {
      allow read, write: if isOwner(customerId);
    }

    // ========================================
    // Tenants Collection
    // ========================================
    match /tenants/{tenantId} {
      allow read: if true;
      allow update: if isAuthenticated() &&
        resource.data.ownerUid == request.auth.uid;
      allow create: if isAuthenticated();
      
      // ========================================
      // Tenant Subcollections
      // ========================================
      
      match /brand/config {
        allow read: if true;
        allow write: if isTenantOwner(tenantId);
      }
      match /theme/config {
        allow read: if true;
        allow write: if isTenantOwner(tenantId);
      }

      match /pages/{pageId} {
        allow read: if true;
        allow write: if isTenantOwner(tenantId);
        
        match /projects/{projectId} {
             allow read: if true;
             allow write: if isTenantOwner(tenantId);
        }
        match /items/{itemId} {
             allow read: if true;
             allow write: if isTenantOwner(tenantId);
        }
      }

      match /websiteConfig/settings {
        allow read: if true;
        allow write: if isTenantOwner(tenantId);
      }

      // Estimates (Subcollection version)
      match /estimates/{estimateId} {
        // ALLOW EMPLOYEES (Unauthenticated in Firebase terms) TO VIEW/UPDATE
        allow read, update: if true;
        allow create: if isAuthenticated();
      }

      // Employees Subcollection
      match /employees/{employeeId} {
        // Public read/update allowed for employee dashboard
        allow read, update: if true;
        allow write: if isTenantOwner(tenantId);
      }
    }

    // ========================================
    // Orders Collection
    // ========================================
    match /orders/{orderId} {
      allow read: if isAuthenticated() &&
        resource.data.createdByUserId == request.auth.uid;
      allow read: if isAuthenticated() &&
        isTenantOwner(resource.data.tenantId);
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() &&
        isTenantOwner(resource.data.tenantId);
    }

    // ========================================
    // Estimates Collection (Root)
    // ========================================
    match /estimates/{estimateId} {
      allow read: if isAuthenticated() &&
        resource.data.createdByUserId == request.auth.uid;
      allow read: if isAuthenticated() && (
        isTenantOwner(resource.data.tenantId) ||
        resource.data.companyId == request.auth.uid
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.createdByUserId == request.auth.uid ||
        isTenantOwner(resource.data.tenantId)
      );
    }

    // ========================================
    // Pricing Configs Collection
    // ========================================
    match /pricing_configs/{tenantId} {
      allow read: if true;
      allow write: if isAuthenticated() && isTenantOwner(tenantId);
    }

    // ========================================
    // Activities Collection
    // ========================================
    match /activities/{activityId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
    }

    // ========================================
    // Consultation Requests Collection
    // ========================================
    match /consultation_requests/{requestId} {
      allow create: if isAuthenticated();
      // ALLOW EMPLOYEES TO VIEW/UPDATE
      allow read, update: if true;
    }

    // ========================================
    // Portfolio Collection
    // ========================================
    match /portfolios/{tenantId} {
      allow read: if true;
      allow write: if isAuthenticated() && isTenantOwner(tenantId);
    }

    // ========================================
    // Catch-all rule
    // ========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
